{
  "name": "gerenciador-de-bases",
  "version": "1.2.4",
  "description": "App unificado para limpeza, consulta e enriquecimento de bases.",
  "author": "Davi Abra√£o",
  "main": "main.js",
  "scripts": {
    "start": "electron . --max-old-space-size=8192",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Inativox/GERENCIADOR-NEONDB.git"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "electron-log": "^5.4.1",
    "electron-store": "^7.0.3",
    "electron-updater": "^6.1.1",
    "exceljs": "^4.4.0",
    "pg": "^8.16.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daviabraao.gerenciadordebases",
    "productName": "Gerenciador de Bases",
  
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Inativox",
        "repo": "GERENCIADOR-NEONDB"
      }
    ]
  }
}
